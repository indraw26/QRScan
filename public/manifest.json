{
  "manifest_version": 3,
  "name": "QR Scanner",
  "version": "1.0.0",
  "description": "Generate QR codes from text and URLs, and download them instantly",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "downloads"
  ]
}